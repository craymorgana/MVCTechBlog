<div class="row">
	<div class="col-auto">
		<h2>Welcome {{name}}!</h2>
	</div>
</div>

<div class="row mt-4 ml-5">
	<div class="col-md-6">
		<a href="/create" class="btn create-new">Create New Blog</a>
	</div>

	{{#if blogs.length}}
		<div class="col-md-6 character-list">
			<h3>Current Blogs:</h3>

		{{#each blogs as |blog|}}
			<div class="row mb-2">
				<div class="col-md-8">
					<h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
				</div>
				<div class="col-md-4">
					<button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
				</div>
			</div>
		{{/each}}
		</div>
	{{/if}}
</div>

<script src="./js/profile.js"></script>